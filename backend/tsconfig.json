{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"experimentalDecorators": true,
		"composite": true,
		"strictPropertyInitialization": false,
		"rootDir": "./src",
		"allowSyntheticDefaultImports": true,
		"types": ["jest", "node"]
	},
	"include": ["src/**/*.ts", "src/bot/index.mjs", "**/*.test.ts"],
	"exclude": ["node_modules"]
}
